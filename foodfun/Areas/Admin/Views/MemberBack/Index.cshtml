@model IEnumerable<foodfun.Models.Users>

@{
    ViewBag.Title = "會員基本資料";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title"> @ViewBag.Title</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th> @Html.DisplayNameFor(model => model.mno)</th>
                                    <th> @Html.DisplayNameFor(model => model.mname)</th>
                                    <th> @Html.DisplayNameFor(model => model.account_name)</th>
                                    <th> @Html.DisplayNameFor(model => model.password)</th>
                                    @*<th> @Html.DisplayNameFor(model => model.id)</th>
                                    <th> @Html.DisplayNameFor(model => model.birthday)</th>
                                    <th> @Html.DisplayNameFor(model => model.phone)</th>
                                    <th> @Html.DisplayNameFor(model => model.address)</th>
                                    <th> @Html.DisplayNameFor(model => model.email)</th>*@
                                    <th> @Html.DisplayNameFor(model => model.role_no)</th>
                                    <th> @Html.DisplayNameFor(model => model.varify_code)</th>
                                    <th> @Html.ActionLink("新增記錄", "Create", "MemberBack", null, new { @class = "btn btn-primary" })</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.mno)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.mname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.account_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.password)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.birthday)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.role_no)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.varify_code)
                                    </td>

                                    <td>
                                        @Html.ActionLink("修改", "Edit", "MemberBack", new { id = item.mno }, new { @class = "btn btn-info" })
                                        @Html.ActionLink("刪除", "Delete", "MemberBack", new { id = item.mno }, new { @class = "btn btn-success", onclick = "return confirm('是否確定要刪除?')" })
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->

















