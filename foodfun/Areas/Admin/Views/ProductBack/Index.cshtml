@using PagedList.Mvc;
@using PagedList;

@model IEnumerable<foodfun.Models.Products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>商品基本資料</h2>


<html class="no-js" lang="">


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Ela Admin - HTML5 Admin Template</title>
    <meta name="description" content="Ela Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="https://i.imgur.com/QRAUqs9.png">
    <link rel="shortcut icon" href="https://i.imgur.com/QRAUqs9.png">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.0/normalize.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.2.0/css/flag-icon.min.css">
    <link rel="stylesheet" href="assets/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="assets/css/lib/datatable/dataTables.bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/style.css">

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

    <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script>

</head>



<body>

    <div class="content">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">

                            @Html.ActionLink("新增記錄", "Create", "ProductBack", null, new { @class = "btn btn-primary" })

                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <td> @Html.DisplayNameFor(model => model.product_name)</td>
                                        <td> @Html.DisplayNameFor(model => model.product_spec)</td>
                                        <td> @Html.DisplayNameFor(model => model.category_no)</td>
                                        <td> @Html.DisplayNameFor(model => model.price_avgcost)</td>
                                        <td> @Html.DisplayNameFor(model => model.price_sale)</td>
                                        <td> @Html.DisplayNameFor(model => model.image_path)</td>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.product_name)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.product_spec)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.category_no)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.price_avgcost)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.price_sale)
                                            </td>
                                            <td>

                                                <img src="@string.Format("../../img/product/{0}/{1}.jpg?t={2}", item.category_no , item.product_no , DateTime.Now.ToString("yyyMMddHHmmss"))" style="width:80px;" alt="x" />
                                            </td>

                                            <td>

                                                @Html.ActionLink("修改", "Edit", "ProductBack", new { id = item.product_no }, new { @class = "btn btn-info" })

                                                @Html.ActionLink("刪除", "Delete", "ProductBack", new { id = item.product_no }, new { @class = "btn btn-success", onclick = "return confirm('是否確定要刪除?')" })

                                                <button class="btn btn-primary" style="background-color:#FFE4E1"> @Html.ActionLink("上傳", "Upload", new { id = item.product_no })</button>

                                            </td>
                                        </tr>
                                    }
                                    <tr>
                                        <td colspan="12">

                                            @Html.PagedListPager((IPagedList)Model, x => Url.Action("Index", new { page = x }))
                                            @*      轉成(IPagedList) 型別,  表頭table (roleList)   ,Url.Action  ( "list"指按下去產生list清單,之後看給Page多少*@


                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .animated -->
    </div><!-- .content -->


    <div class="clearfix"></div>

   

</body>
</html>


